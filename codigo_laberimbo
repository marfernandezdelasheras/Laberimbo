from tkinter import *
from tkinter import messagebox

#===========================Raiz
raiz=Tk()

raiz.title("LABERIMBO")

#raiz.resizable(True,True)
raiz.geometry("1250x1250")
raiz.config(cursor="heart")

raiz.config(bg="#e4b6c2")
raiz.iconbitmap("letra B.ico")

#======================Def


def sigamos():
    seguir=messagebox.showinfo("Así que "+nombre.get()+"...", "Vaya... Menos mal, esto es sólo para humanos. ¿Seguimos?")
    if seguir=="ok":
        miFrame.destroy()
        dosFrame=Frame()
        dosFrame.pack(anchor="center",pady="300")
        dosFrame.config(width="1200", height="1200")
        dosFrame.config(bg="#e4b6c2")
        dosFrame.config(relief="ridge")
        dosFrame.config(bd=3)
        dosFrame.config(cursor="heart")
        queeres=Label(dosFrame, text="¿Qué eres?\n", bg="#e4b6c2", fg="white", font=("Arial", 18)).grid(row=0, column=1)
        #==================Checkbuttons
        hombre=IntVar()
        mujer=IntVar()
        ninguno=IntVar()
        

        def opcionesgenero():
            if(hombre.get()==1):
                dosFrame.destroy()
                raiz.config(bg="#889ac1", cursor="arrow")
                hombreFrame=Frame()
                hombreFrame.pack(anchor="center", pady="300")
                hombreFrame.config(width="1200", height="1200")
                hombreFrame.config(bg="#889ac1")
                hombreFrame.config(relief="sunken")
                hombreFrame.config(bd=3)
                hombreFrame.config(cursor="arrow")
                ereshombre=Label(hombreFrame, text="Así que eres hombre...\n ", bg="#889ac1", fg="black", font=("Arial", 14)).grid(row=0, column=1)

                
                
                def nopreguntas():
                    hombreFrame.destroy()
                    raiz.config(bg="#889ac1", cursor="arrow")                    
                    nopreFrame=Frame()
                    nopreFrame.pack(anchor="center", pady="300")
                    nopreFrame.config(width="1200", height="1200")
                    nopreFrame.config(bg="#889ac1")
                    nopreFrame.config(relief="sunken")
                    nopreFrame.config(bd=3)
                    nopreFrame.config(cursor="arrow")
                    nopreguntas=Label(nopreFrame, text="¿Qué?\n¿No has notado ningún cambio?\n ", bg="#889ac1", fg="black", font=("Arial", 14)).grid(row=0, column=1)

                    def azul():
                        nopreFrame.destroy()
                        raiz.config(bg="#889ac1", cursor="arrow")
                        azulFrame=Frame()
                        azulFrame.pack(anchor="center", pady="300")
                        azulFrame.config(width="1200", height="1200")
                        azulFrame.config(bg="#889ac1")
                        azulFrame.config(relief="sunken")
                        azulFrame.config(bd=3)
                        azulFrame.config(cursor="arrow")
                        azulExpl=Label(azulFrame, text="He cambiado mi interfaz a azul\npara que te sintieras más cómodo.\n \nDe nada.\n", bg="#889ac1", fg="black", font=("Arial", 14)).grid(row=0, column=1)

                        def gracias():
                            nogracias=messagebox.showinfo("Mejor no me las des","Quién diría que ibas a asociar tanto ser hombre con este color...Es algo bastante arbitrario y la verdad es que a mí me gusta más el rosa, así que voy a cambiarlo otra vez, si te parece.")
                            if nogracias=="ok":
                                azulFrame.destroy()
                                raiz.config(cursor="heart")
                                raiz.config(bg="#e4b6c2")
                                florexplFrame=Frame()
                                florexplFrame.pack(pady="20", padx="20")
                                florexplFrame.config(width="1000", height="1000")
                                florexplFrame.config(bg="#e4b6c2")
                                florexplFrame.config(relief="ridge")
                                florexplFrame.config(bd=3)
                                florexplFrame.config(cursor="heart")
                                Label(florexplFrame, text="Vaya... Perdona, las cosas se han puesto un poco tensas. Aquí tienes una flor (para otra flor)\n\n", bg="#e4b6c2", fg="white", font=("Arial", 14)).grid(row=0, column=1)

                                def pronom():
                                    florexplFrame.destroy()
                                    florFrame.destroy()

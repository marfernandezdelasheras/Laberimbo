                                    pronombres=Label(pronombresFrame, text="Ya me has dicho que eres hombre, pero...\n¿qué pronombres prefieres que use al hablarte?", bg="#e4b6c2", fg="white", font=("Arial", 14)).grid(row=0, column=1)

                                    def profem():
                                        pronombresFrame.destroy()

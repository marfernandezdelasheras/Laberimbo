def nohumano():
    cerrar=messagebox.showinfo("Oops", "Ya me parecía que "+nombre.get()+" era un nombre poco humano... \n \nLástima, esto es solo para humanos. \n¡Hasta la próxima!")
    if cerrar=="ok":
        raiz.destroy()
        
def humano():
    valor=messagebox.askquestion("","Espera, espera... \n ¿"+nombre.get()+"? ¿Eres un ser humano?")

    if valor=="yes":
        sigamos()
    else :
        nohumano()
    


#==================Frame

miFrame=Frame()
#miFrame.pack(fill="y", expand="True")
miFrame.config(width="600", height="800")
miFrame.pack(anchor="center", pady="300")
miFrame.config(bg="#e4b6c2")
miFrame.config(relief="ridge")
miFrame.config(bd=3)
miFrame.config(cursor="heart")


#==================Entries

minombre=StringVar()

nombre=Entry(miFrame)
nombre.grid(row=4, column=1)
nombre.config(fg="#FF0067", justify="center", font=("Arial", 14))



#=================Label

bienvenidx=Label(miFrame, text="Bienvenidx", bg="#e4b6c2", fg="white", font=("Arial", 18)).grid(row=1, column=1)
pregunta=Label(miFrame, text="Para empezar, \n¿cuál es tu nombre? ", bg="#e4b6c2", fg="white", font=("Arial", 16))
pregunta.grid(row=2, column=1)


#=================Button


botonEnvio=Button(miFrame,text="Enviar", font=("Arial", 13), fg="black", command=humano)
botonEnvio.grid(row=7, column=1)
botonEnvio.config(cursor="hand2")



raiz.mainloop()
